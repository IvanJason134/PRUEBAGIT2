<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBF3FB"


>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >



    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#F6E6FF"
        android:id="@+id/header">



        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textAlignment="center"
            android:text="MenÃº Principal"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/left_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:layout_alignParentStart="true"
            android:background="@null"
            android:onClick="myButtonClickHandler"
            android:padding="16dp"
            android:src="@drawable/back" />



    </RelativeLayout>




        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="680dp"
            android:background="@drawable/edittext_rounded_bg"
            android:backgroundTint="#AC83C2"
            android:orientation="vertical"
            android:layout_margin="10dp"

            >

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
                android:background="@drawable/circle"
                android:src="@drawable/crochet" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="1dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/hola"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="130dp"
                        android:text="Hola"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/holausuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="Jenysey"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_rounded_bg"
        android:backgroundTint="#DEC6DB"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:padding="5dp"
        >
        <!-- -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    >



                    <ImageView
                        android:id="@+id/background2"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/worker"

                        android:background="@drawable/imageround" />
                        />

                    <View
                        android:id="@+id/layout"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:backgroundTint="#97703B78"
                        android:background="@drawable/imageround"
                        android:clipToOutline="true"/>


                    <TextView
                        android:id="@+id/empleado"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:clickable="true"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text="Empleados"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:textStyle="bold" />



                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"

                    >

                    <ImageView
                        android:id="@+id/background1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ventas1"
                        android:background="@drawable/imageround" />
                    />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:backgroundTint="#97703B78"
                        android:background="@drawable/imageround"
                        android:clipToOutline="true"/>

                    <TextView
                        android:id="@+id/ventas"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:clickable="true"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text="Ventas"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"

                    >

                    <ImageView
                        android:id="@+id/background3"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/producto"
                        android:background="@drawable/imageround" />
                    />

                    <View
                        android:id="@+id/layout2"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:backgroundTint="#97703B78"
                        android:background="@drawable/imageround"
                        android:clipToOutline="true"/>


                    <TextView
                        android:id="@+id/productos"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:clickable="true"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text="Productos"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:textStyle="bold" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"

                    >

                    <ImageView
                        android:id="@+id/background4"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:clipToOutline="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/inventario"
                        android:background="@drawable/imageround" />
                    />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:backgroundTint="#97703B78"
                        android:background="@drawable/imageround"
                        android:clipToOutline="true"/>

                    <TextView
                        android:id="@+id/inventario"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:clickable="true"
                        android:fontFamily="sans-serif-condensed-light"
                        android:text="Inventario"
                        android:textColor="#FFFFFF"
                        android:textSize="25sp"
                        android:textStyle="bold" />



                </RelativeLayout>
                <!-- Repeat the above RelativeLayout for 5 more items -->

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
    </RelativeLayout>
</ScrollView>